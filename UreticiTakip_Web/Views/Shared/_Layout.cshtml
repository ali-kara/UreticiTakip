<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Bu Bir Üretici Tediye Takip Sayfasıdır." />
    <title>@ViewBag.Title</title>

    @*@Scripts.Render("~/Bundles/jquery")

        @Scripts.Render("~/Bundles/js")
        @Scripts.Render("~/Bundles/DatepickerJS")
        @Scripts.Render("~/Bundles/CustomJS")

        @RenderSection("scripts", required: false)

        @Styles.Render("~/Bundles/css")
        @Styles.Render("~/Bundles/DatepickerCSS")*@


    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />


    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/bootstrap.js"></script>


    <link href="~/Content/hint.min.css" rel="stylesheet" />


    <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />

    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/moment-with-locales.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>

    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <link href="~/Content/select2/css/select2.min.css" rel="stylesheet" />
    <script src="~/Content/select2/js/select2.full.min.js"></script>

    <script src="~/Scripts/MyModal.js"></script>

    <script src="~/Content/AlertifyJS/alertify.min.js"></script>
    <link href="~/Content/AlertifyJS/css/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/AlertifyJS/css/themes/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Content/font-awesome/css/all.min.css" rel="stylesheet" />
    <script src="~/Content/font-awesome/js/all.min.js"></script>

</head>




<body class="mybody">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Üretici Tediye Ana Sayfa", "Index", "Default", new { area = "" }, new { @class = "navbar-brand" })
                <img src="~/Resimler/icon.ico" class="img-rounded" height="50" width="50" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav  navbar-inverse bg-primary">
                    @*Ana Sembolün Yan Tarafına Gelecek Butonlar İçin*@
                </ul>

                <ul class="nav navbar-nav navbar-inverse bg-primary navbar-right">
                    @if(  (Session["kullanici"] != null && (UserType)Session["kullanici"] == UserType.Admin) || 
                        (Session["kullanici"] != null && (UserType)Session["kullanici"] == UserType.MezatGorevlisi)
                        )
                    {
                        @Html.Partial("PartialViews/_Header_Admin")
                    }
                    @if (Session["kullanici"] != null && (UserType)Session["kullanici"] == UserType.Üretici)
                    {
                        @Html.Partial("PartialViews/_Header_Uretici")
                    }
                    @if (Session["kullanici"] != null && (UserType)Session["kullanici"] == UserType.Nakliyeci)
                    {
                        @Html.Partial("PartialViews/_Header_Nakliyeci")
                    }
                    @if (Session["kullanici"] == null)
                    {
                        <li>
                            <a href="/Bireysel/Giris" style="background-color:chartreuse; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color:black;font-size:18px">
                                <span class="fa fa-sign-in-alt"></span>
                                <span>
                                    Üretici Girişi
                                </span>
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </div>

    <section class="content mycontent">
        <div class="container-fluid">
            @RenderBody()
            <hr />

        </div>
    </section>

    @Html.Partial("PartialViews/_FooterMenu")

</body>
</html>


<script async src="https://www.googletagmanager.com/gtag/js?id=UA-120675167-1"></script>
<script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());

    gtag('config', 'UA-120675167-1');
</script>

<style>
    .mybody {
        display: flex;
        min-height: 100vh;
        flex-direction: column;
    }

    .mycontent {
        flex: 1;
    }
</style>