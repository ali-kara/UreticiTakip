@helper DateTimeScript(string DatePickerName)
{
    <script>
                $('#@DatePickerName').datetimepicker({
                    format: "DD-MM-YYYY",
                    locale: 'tr',
                });
                //$('#datetimepicker1').datetimepicker('show');

                //function getdate()
                //{
                //    $("#datetimepicker").find("input").val()
                //}
                $('#getdate').click(function () { $("#@DatePickerName").find("input").val() })
    </script>
}