@helper DatePicker(string ButtonText, string DatePickerName, string SessionDatePath)
{
    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-7 col-xs-12">
                <div class="col-md-3 col-xs-4">
                    <button type="submit"
                            class="btn btn-success">
                        @ButtonText
                    </button>
                </div>
                <div class="col-md-4 col-xs-8">
                    <div class="form-group">
                        <div style="text-align:center"
                             class='input-group date'
                             id='@DatePickerName'>
                            <input id="@DatePickerName"
                                   name="@DatePickerName"
                                   type='text'
                                   class="form-control"
                                   value=@Session[SessionDatePath]
                                   placeholder="Tarihi Seçiniz." />
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @DateTimeScript(DatePickerName)
}

